<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+android:id/ball_prompt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sensor: 0, 0, 0"
    />
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+android:id/ball_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    >
        <org.expressme.wireless.accelerometer.BallView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+android:id/ball"
            android:src="@drawable/icon"
            android:scaleType="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </FrameLayout>
</LinearLayout>
